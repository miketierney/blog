<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>Author ID:</b>
  <%= @post.author_id %>
</p>

<p>
  <b>Published at:</b>
  <%= @post.published_at %>
</p>

<p>
  <b>State:</b>
  <%= @post.state %>
</p>

<p>
  <b>Summary:</b>
  <%= @post.summary %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


<h2>Comments</h2>

<%- if @post.comments -%>
  <%- @post.comments.each do |comment| -%>
  <p id="notice"><%= notice %></p>

  <p>
    <b>Email:</b>
    <%= comment.email %>
  </p>

  <p>
    <b>Body:</b>
    <%= comment.body %>
  </p>
  <%- end -%>
<%- end -%>

<%= render :partial => 'comments/form', :locals => {:comment => Comment.new} %>